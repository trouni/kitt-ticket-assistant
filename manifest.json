{
  "manifest_version": 2,
  "name": "Kitt Ticket Assistant",
  "description": "Voice assistant for Kitt's ticketing system.",
  "author": "Trouni Tiet",
  "version": "0.1.0",
  "icons": {
    "128": "images/lewagon.png"
  },
  "web_accessible_resources": [
    "assets/notification.mp3"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://kitt.lewagon.com/camps/*/tickets"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "assets/style.css"
      ],
      "run_at": "document_start"
    }
  ]
}