{
  "manifest_version": 2,
  "name": "Kitt Ticket Assistant",
  "description": "A voice assistant for Kitt ticketing system.",
  "author": "Trouni Tiet",
  "version": "0.0.1",
  "permissions": [
    "tabs"
  ],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://kitt.lewagon.com/camps/*"
      ],
      "js": [
        "scripts/content.js",
        "assets/style.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "",
    "default_title": ""
  }
}